---
import Navbar from "../components/Navbar";
import NewsWidget from "../components/NewsWidget.astro";
import Footbar from "../components/Footbar.astro";
const { title } = Astro.props;

import '@fontsource/pt-sans'
import '../styles/globals.css'
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
        <main>
        <Navbar active="blog" client:load />
        <div class="container-fluid flex flex-wrap bg-white pb-8">
            <div class="w-full md:w-1/4 gx-5 hidden md:block">
            <NewsWidget></NewsWidget>
            </div>
            <div class="w-full md:w-3/4 gx-5">
                <div class="mx-4">
                    <h1 class="text-3xl font-bold mb-4 mt-6">{title}</h1>
                    <slot />
                </div>
            </div>
            <br />
        </div>
        </main>
        <Footbar></Footbar>
    </div>
    </body>
</html>